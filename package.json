{
  "name": "ruume-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "start:react-devtools": "bunx react-devtools",
    "start:dev": "bunx react-devtools & expo start --clear",
    "start:dev:ios": "bunx react-devtools & expo start --clear --ios",
    "start:dev:android": "bunx react-devtools & expo start --clear --android",
    "reset-project": "node ./scripts/reset-project.js",
    "rebuild:ios:local": "rm -rf ios/Pods & rm -rf ios/build & cd ios & pod install",
    "rebuild:android:local": "cd android && ./gradlew clean && cd .. && rm -rf android/build && rm -rf android/app/build",
    "android": "expo run:android",
    "ios": "expo run:ios & open ~/Desktop/reactotron.app",
    "web": "expo start --web",
    "test": "jest",
    "test:run:clear": "jest --clearCache & jest --watchAll",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.3",
    "@hookform/resolvers": "^3.9.0",
    "@react-navigation/native": "^6.0.2",
    "@supabase/supabase-js": "^2.45.4",
    "@tanstack/query-sync-storage-persister": "^5.59.16",
    "@tanstack/react-query": "^5.59.15",
    "@tanstack/react-query-persist-client": "^5.59.16",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "expo": "~51.0.38",
    "expo-blur": "~13.0.2",
    "expo-clipboard": "~6.0.3",
    "expo-constants": "~16.0.2",
    "expo-font": "~12.0.9",
    "expo-haptics": "~13.0.1",
    "expo-linear-gradient": "~13.0.2",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.23",
    "expo-splash-screen": "~0.27.6",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-web-browser": "~13.0.3",
    "jotai": "^2.10.1",
    "jotai-effect": "^1.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.53.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-mmkv": "2.12.2",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "~0.19.10",
    "styled-components": "^6.1.13",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@testing-library/react-native": "^12.7.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "eslint": "^9.10.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.3",
    "prettier": "^3.3.3",
    "react-devtools": "^5.3.1",
    "react-native-svg-transformer": "^1.5.0",
    "reactotron-react-native": "^5.1.9",
    "reactotron-react-native-mmkv": "^0.2.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "private": true
}
